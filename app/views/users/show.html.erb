<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
      <h3><%= I18n.t"bookshelf.page.parts.Books" %> (<%= @user.books.count %>)</h3>
      <div class="books d-flex flex-wrap justify-content-md-start">
        <%= render @books %>
      </div>
      <%= paginate @books %>
    <% end %>
  </div>
</div>