<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user, data: {"turbolinks" => false} %>
  | <%= user.books.count %> 冊
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</li>