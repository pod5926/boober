    <%= form_for(@user, url: url) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label User.human_attribute_name(:password_confirmation) %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <input type="submit" name="commit" value= <%= I18n.t"boober.page.parts.Save changes" %> class="btn btn-primary" data-disable-with= <%= I18n.t"boober.page.parts.post" %>>
  <% end %>