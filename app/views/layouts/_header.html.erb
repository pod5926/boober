<header class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">

  <div class="container">
    <%# turbolinks の無効！ %>
    <%= link_to "BOOK SHELF", root_path, data: {"turbolinks" => false}, class: "navbar-brand", id: "logo"%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <!-- この下の行に mr-auto クラスを付与するだけ -->
      <ul class="navbar-nav mr-auto">　
        <li class="nav-item">
          <%= link_to "Home", root_path, data: {"turbolinks" => false}, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Help", help_path, data: {"turbolinks" => false}, class: "nav-link"%>
        </li>
      </ul>
      <%# ログイン状態により表示が変わる %>
      <% if logged_in? %>
      <form class="form-inline my-2 my-lg-0 mx-auto">
        <input class="form-control mr-sm-2  my-sm-0" type="search" placeholder="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Users", users_path, data: {"turbolinks" => false}, class: "nav-link"%>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", current_user, data: {"turbolinks" => false}, class: "dropdown-item"%>
            <%= link_to "Settings", edit_user_path(current_user), data: {"turbolinks" => false}, class: "dropdown-item"%>
            <%= link_to "test", "#", data: {"turbolinks" => false}, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", logout_path, method: :delete, data: {"turbolinks" => false}, class: "dropdown-item"%>
          </div>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Log in", login_path, class: "nav-link" %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</header>