<header class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">

  <div class="container">
    <%# turbolinks の無効！ %>
    <%= link_to "BOOBER", root_path, data: {"turbolinks" => false}, class: "navbar-brand", id: "logo"%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <ul class="navbar-nav mr-auto">　
        <li class="nav-item">
          <%= link_to "GitHub", "https://github.com/pod5926/portfolio" , class: "nav-link"%>
        </li>
      </ul>
      <%# ログイン状態により表示が変わる %>
      <% if logged_in? %>
        <%= search_form_for @q, class: "form-inline my-2 my-lg-0 mx-auto" do |f| %>
        <input class="form-control mr-sm-2  my-sm-0" placeholder= <%= I18n.t"bookshelf.page.parts.Book title" %> type="search" name="q[title_cont]" id="q_title_cont">
        <input type="submit" name="commit" value= <%= I18n.t"bookshelf.page.parts.Search" %> class="form-control btn btn-outline-success my-2 my-sm-0" data-disable-with= <%= I18n.t"bookshelf.page.parts.post" %> >
        <% end %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <% users = I18n.t"bookshelf.page.header.Users" %>
          <%= link_to users, users_path, data: {"turbolinks" => false}, class: "nav-link"%>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= I18n.t"bookshelf.page.header.Account" %></a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% profile = I18n.t"bookshelf.page.header.Profile" %>
            <%= link_to profile, current_user, data: {"turbolinks" => false}, class: "dropdown-item"%>
            <% setting = I18n.t"bookshelf.page.header.Setting" %>
            <%= link_to setting, edit_user_path(current_user), data: {"turbolinks" => false}, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <% log_out = I18n.t"bookshelf.page.header.Log out" %>
            <%= link_to log_out, logout_path, method: :delete, data: {"turbolinks" => false}, class: "dropdown-item"%>
          </div>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <% log_in = I18n.t"bookshelf.page.header.Log in" %>
          <%= link_to log_in, login_path, class: "nav-link" %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</header>