<% provide(:title, (I18n.t"boober.page.titles.Forgot password")) %>
<h1><%= I18n.t"boober.page.titles.Forgot password" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <input type="submit" name="commit" value=<%= I18n.t"boober.page.parts.Submit" %> class="btn btn-primary" data-disable-with= <%= I18n.t"boober.page.parts.post" %> >
    <% end %>
  </div>
</div>