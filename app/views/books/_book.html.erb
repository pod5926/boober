<div class="book" id="book-<%= book.id %>">
  <span class="content">
  <% if book.picture? %>
      <%= image_tag book.picture.url  %>
    <% else %>
      <%= image_tag('sm.jpg')  %>
  <% end %>
    <%= book.title %><br>
    <%= book.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(book.created_at) %> ago.
    <% if current_user?(book.user) %>
      <%= link_to "delete", book, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</div>
