<% provide(:title, "Show book") %>

<h1><%= I18n.t"bookshelf.page.titles.Show book" %></h1>
<div class="row">
  <div class="col-md-10 mx-auto">
    <table  class="table table-striped mx-auto">
      <tbody>
        <tr>
          <th>画像</th>
          <td>
            <% if @book.picture? %>
              <%= image_tag @book.picture.url %>
            <% else %>
              <%= image_tag('sm.jpg') %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td>
            <%= @book.title %>
          </td>
        </tr>
        <tr>
          <th><%= Book.human_attribute_name(:content) %></th>
          <td>
            <%= @book.content %>
          </td>
        </tr>
        <tr>
          <th><%= Book.human_attribute_name(:created_at) %></th>
          <td>
            <%= @book.created_at.to_s(:datetime_jp) %>
          </td>
        </tr>
        <tr>
          <% if current_user?(@book.user) %>
              <th>ユーザー機能</th>
            <% else %>
              <th>投稿ユーザー</th>
          <% end %>
          <td>
            <% if current_user?(@book.user) %>
              <% unless @book.user.email == "test@gmail.com" %>
                <%= link_to "編集", edit_book_path, data: {"turbolinks" => false}, class: "btn btn-info btn-md" %>
                <%= link_to "削除", @book, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-md" %>
              <% else %>
                <%= I18n.t"bookshelf.page.parts.test user no use" %>
              <% end %>
              <% else %>
                <%= link_to @book.user.name, user_path(@book.user.id) %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
